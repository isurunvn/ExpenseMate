<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.Controllers.AddCashierController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <Label text="Cashier Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="cashierNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Shop ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="shopIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button text="Add Cashier" onAction="#handleAddCashier" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>